<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dip_12"
    android:background="@drawable/bg_rounded_soft_green">
    <TextView
        android:id="@+id/item_text_comment_ours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/item_text_comment_ours_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_text_comment_ours"
        android:layout_alignRight="@id/item_text_comment_ours"
        android:layout_alignEnd="@id/item_text_comment_ours"
        android:layout_marginTop="@dimen/dip_12"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>
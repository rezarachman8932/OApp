<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/dip_8"
        android:clipToPadding="false"
        android:scrollbars="vertical" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/text_label_empty_comments"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dip_8"
        android:layout_marginRight="@dimen/dip_8"
        android:layout_marginBottom="@dimen/dip_8">
        <RelativeLayout
            android:id="@+id/layout_submit_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/bg_rounded_border"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dip_8">
            <EditText
                android:id="@+id/input_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_6"
                android:textSize="@dimen/sp_12"
                android:hint="@string/text_hint_comments"
                android:background="@android:color/transparent" />
        </RelativeLayout>
        <Button
            android:id="@+id/button_send_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_soft_green"
            android:layout_marginLeft="@dimen/dip_8"
            android:layout_marginStart="@dimen/dip_8"
            android:text="@string/text_label_send"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            app:elevation="@dimen/dip_4"/>
    </LinearLayout>
</LinearLayout>
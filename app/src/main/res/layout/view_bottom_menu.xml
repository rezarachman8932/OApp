<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_8"
        android:background="@drawable/bg_shadow_gradient" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dip_12">
        <RelativeLayout
            android:id="@+id/layout_icon_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/view_image_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_vector_envelope"/>
            <ImageView
                android:id="@+id/image_badge_message"
                android:layout_width="@dimen/dip_8"
                android:layout_height="@dimen/dip_8"
                android:layout_alignRight="@id/view_image_first"
                android:layout_alignEnd="@id/view_image_first"
                android:background="@drawable/bg_rounded_count" />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/dip_2"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteSmoke"/>
        <LinearLayout
            android:id="@+id/layout_icon_second"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_vector_plus" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dip_2"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteSmoke"/>
        <LinearLayout
            android:id="@+id/layout_icon_third"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/view_image_third"
                android:layout_width="@dimen/dip_28"
                android:layout_height="@dimen/dip_28"
                android:layout_gravity="center_horizontal"
                app:civ_border_width="@dimen/dip_2"
                app:civ_border_color="@color/colorWhiteSmoke"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_12">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_image_connected_user"
            android:layout_width="@dimen/dip_36"
            android:layout_height="@dimen/dip_36"
            android:layout_centerVertical="true"
            app:civ_border_width="@dimen/dip_2"
            app:civ_border_color="@color/colorWhiteSmoke"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_8"
            android:layout_marginStart="@dimen/dip_8"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_image_connected_user"
            android:layout_toEndOf="@+id/item_image_connected_user"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_text_connected_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/item_text_connected_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_4"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

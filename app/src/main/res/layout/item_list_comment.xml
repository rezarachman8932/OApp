<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dip_12">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_image_comment_avatar"
        android:layout_width="@dimen/dip_36"
        android:layout_height="@dimen/dip_36"
        android:layout_centerVertical="true"
        app:civ_border_width="@dimen/dip_2"
        app:civ_border_color="@color/colorWhiteSmoke"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_12"
        android:layout_marginStart="@dimen/dip_12"
        android:layout_toRightOf="@id/item_image_comment_avatar"
        android:layout_toEndOf="@id/item_image_comment_avatar">
        <TextView
            android:id="@+id/item_text_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/item_text_comment_content"
            android:layout_width="@dimen/dip_220"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
    <TextView
        android:id="@+id/item_text_time_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_image_comment_avatar_theirs"
        android:layout_width="@dimen/dip_36"
        android:layout_height="@dimen/dip_36"
        android:layout_centerVertical="true"
        app:civ_border_width="@dimen/dip_2"
        app:civ_border_color="@color/colorWhiteSmoke"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_8"
        android:layout_marginStart="@dimen/dip_8"
        android:layout_toRightOf="@id/item_image_comment_avatar_theirs"
        android:layout_toEndOf="@id/item_image_comment_avatar_theirs"
        android:padding="@dimen/sp_12"
        android:background="@drawable/bg_rounded_border">
        <TextView
            android:id="@+id/item_text_comment_theirs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</RelativeLayout>